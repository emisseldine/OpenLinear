import numpy as np

A = np.array([[0, 1, -3, -1, -2], 
              [1, 1, 2, 4, 3], 
              [3, 7, -6, 8, 1], 
              [0, -1, 3, 4, -4]])

print(A)
print(A.shape)

m,n = A.shape
print('m =', m)
print('n =', n)

print("The 2nd row: ", A[1])
print("The 3rd column: ", A[:,2])
print("a_(1,3) = ", A[0,2])

B = np.column_stack([[0,1,3,0], [1,1,7,-1], [-3,2,-6,3], [-1,4,8,4], [-2, 3, 1, -4]])
print(B)
