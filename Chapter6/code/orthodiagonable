import numpy as np

# Define matrix A
A = np.array([[3,-2,4],
              [-2,6,2],
              [4,2,3]])
# Calculate eigenvalues (D) and eigenvectors (P) of matrix A using eigh (for symmetric matrices)
D, P = np.linalg.eigh(A)
# Print the results
print(P,"\n",
      np.diag(D),"\n",
      P.T,"\n=",
      P @ np.diag(D) @ P.T,"\n")
